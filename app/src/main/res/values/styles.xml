<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- TODO 20: The attribute is then referenced from App theme definition. -->
        <!-- We create a link between the resource attribute and the style -->
    </style>

    <style name="AppTheme.FormHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/bitter</item>
        <item name="android:layout_marginTop">@dimen/space_12</item>
        <item name="android:layout_marginBottom">@dimen/space_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorHintEnabled</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">@dimen/line_height</item>
    </style>

    <style name="AppTheme.HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/space_8</item>
        <item name="android:layout_marginBottom">@dimen/space_8</item>
        <item name="android:background">@color/textColorHintDisabled</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>

